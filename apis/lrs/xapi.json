        "/statements": {
            "get": {
                "summary": "statement query interface",
                "operationId": "queryStatements",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "statementId",
                        "in": "query",
                        "description": "Id of Statement to fetch\n",
                        "type": "string"
                    },
                    {
                        "name": "voidedStatementId",
                        "in": "query",
                        "description": "Id of voided Statement to fetch.\n",
                        "type": "string"
                    },
                    {
                        "name": "agent",
                        "in": "query",
                        "description": "Filter, only return Statements for which the specified Agent\nor Group is the Actor or Object of the Statement.\n",
                        "type": "string"
                    },
                    {
                        "name": "verb",
                        "in": "query",
                        "description": "Filter, only return Statements matching the specified Verb id.\n",
                        "type": "string"
                    },
                    {
                        "name": "activity",
                        "in": "query",
                        "description": "Filter, only return Statements for which the Object of the\nStatement is an Activity with the specified id.\n",
                        "type": "string"
                    },
                    {
                        "name": "registration",
                        "in": "query",
                        "description": "Filter, only return Statements matching the specified\nregistration id. Note that although frequently a unique\nregistration will be used for one Actor assigned to one\nActivity, this cannot be assumed. If only Statements for a\ncertain Actor or Activity are required, those parameters also\nneed to be specified.\n",
                        "type": "string"
                    },
                    {
                        "name": "related_activities",
                        "in": "query",
                        "description": "Apply the Activity filter broadly. Include Statements for\nwhich the Object, any of the context Activities, or any of\nthose properties in a contained SubStatement match the\nActivity parameter, instead of that parameter's normal\nbehavior. Matching is defined in the same way it is for the\n\"activity\" parameter.\n",
                        "type": "boolean"
                    },
                    {
                        "name": "related_agents",
                        "in": "query",
                        "description": "Apply the Agent filter broadly. Include Statements for which\nthe Actor, Object, Authority, Instructor, Team, or any of\nthese properties in a contained SubStatement match the Agent\nparameter, instead of that parameter's normal behavior.\nMatching is defined in the same way it is for the \"agent\"\nparameter.\n",
                        "type": "boolean"
                    },
                    {
                        "name": "since",
                        "in": "query",
                        "description": "Only Statements stored since the specified Timestamp\n(exclusive) are returned.\n",
                        "type": "string"
                    },
                    {
                        "name": "until",
                        "in": "query",
                        "description": "Only Statements stored at or before the specified \nTimestamp are returned.\n",
                        "type": "string"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Maximum number of Statements to return. 0 indicates return \nthe maximum the server will allow.\n",
                        "type": "integer"
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "defines the statement format. Possible values are ids, exact,\nand cannonical  \n",
                        "type": "string"
                    },
                    {
                        "name": "attachments",
                        "in": "query",
                        "description": "If true, the LRS uses the multipart response format and\nincludes all attachments as described previously. If false,\nthe LRS sends the prescribed response with Content-Type\napplication/json and does not send attachment data.\n",
                        "type": "boolean"
                    },
                    {
                        "name": "ascending",
                        "in": "query",
                        "description": "If true, return results in ascending order of stored time\n",
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            },
            "put": {
                "summary": "stores one or more statements",
                "operationId": "storeSingleStatement",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "statementId",
                        "in": "query",
                        "description": "Id of Statement to update\n",
                        "type": "string"
                    }
                ],
                "responses": {
                    "204": {
